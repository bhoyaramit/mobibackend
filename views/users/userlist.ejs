<!DOCTYPE html>
<html lang="en">
<head>
  <title>User List</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
  <h2 style="text-align:center">User List </h2>
  <br>
  <table class="table">
    <thead>
        <tr>
            <th scope="col">no</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>



        </tr>
    </thead>
    <tbody>
        <% var i =1 %>
        <% data.forEach((user)=>{ %>
            <tr>

                <td><%= i++ %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><img src="user_Images/<%= user.image %>" width="100" height="80" alt="<%= user.image %>" ></td>
                
            <td>
              <form action="/user/delete/<%= user._id %>"class="d-inline" method="post">
                <button class="btn btn-warning">Delete</button>
                </form>
                <br>
                <form action="/user/download/<%= user.fileupload_id %>">
                  <input class="btn btn-success" type="submit" value="download">
                 </form>
                    
                </td>
            </tr>
    

       <% })%>
        
    </tbody>

</table>
</div>

<a class="btn btn-primary" href="/user">Back To Home </a>
</body>
</html>






